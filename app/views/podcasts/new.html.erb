<div class="container" style="width: 50%">
  <h1> Upload an Episode </h1>

  <%= form_for @podcast, html: {class: "form-signin"} do |f|%>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: :off, class: 'form-control' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, autocomplete: :off, class: 'form-control' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_field :date, autofocus: true, class: 'form-control' %>
    </div>
    <br>

    <div class="field">
      <%= f.label :paywall %>
      <%= f.check_box :paywall %>
    </div>
    <br>

    <div class="field">
      <%= f.label :audio %>
      <%= f.file_field :audio, class: 'form-control'%>
    </div>
    <br>

    <div class="actions">
      <%= f.submit "Save", class: 'btn btn-lg btn-primary btn-block submit-podcast'  %>
    </div>

  <% end %>
</div>

<script type="text/javascript">
  $('.submit-podcast').click(function() {
    $('#loader').removeClass("hide");
  });
</script>
