<div class="container" style="width: 50%">
  <h2>Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-signup"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
     <%= f.label :email %><br />
     <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control' %>
    </div>
    <br>

    <div class="field">
     <%= f.label :password %>
     <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
     <% end %><br />
      <%= f.password_field :password, autocomplete: "off" ,class: 'form-control'%>
    </div>
    <br>

    <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "off" ,class: 'form-control'%>
    </div>
     <br>

    <div class="field">
     <%= f.label :first_name %><br />
     <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: 'form-control'%>
    </div>
    <br>

    <div class="field">
     <%= f.label :street_address %><br />
     <%= f.text_field :street_address, autofocus: true, autocomplete: "street_address",class: 'form-control' %>
    </div>
    <br>

    <div class="field">
     <%= f.label :city %><br />
     <%= f.text_field :city, autofocus: true, autocomplete: "city",class: 'form-control' %>
    </div>
    <br>

    <div class="field">
     <%= f.label :state %><br />
     <%= f.text_field :state, autofocus: true, autocomplete: "state",class: 'form-control' %>
    </div>
    <br>
      
      <div class="field">
     <%= f.label :zip_code %><br />
     <%= f.text_field :zip_code, autofocus: true, autocomplete: "zip_code",class: 'form-control' %>
    </div>
    <br>

    <div class="actions">
     <%= f.submit "Sign up", class: 'btn btn-lg btn-primary btn-block' %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
