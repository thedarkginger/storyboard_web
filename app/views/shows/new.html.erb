<div class="container" style="width: 50%">
  <h1> Create a Show </h1>

  <%= form_for @show, html: {class: "form-signin"} do |f|%>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: :off, class: 'form-control' %>
    </div>
    <br />

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, autocomplete: :off, class: 'form-control' %>
    </div>
    <br />

    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image, class: 'form-control'%>
    </div>
    <br>

   <div class="actions">
    <%= f.submit "Save", class: 'btn btn-lg btn-primary btn-block' %>
   </div>
  <% end %>
</div>
