<div style="text-align:right; margin-right: 50px;margin-top: 30px;">

  <% if user_signed_in? %>
    <%= link_to "New Podcast", new_podcast_path, :class => 'btn btn-large btn-success' %>
    <%= link_to "List Podcasts", podcasts_path, :class => 'btn btn-large btn-success' %>
    <%= link_to "List Podcasts(JSON)", podcasts_path(format: :json), :class => 'btn btn-large btn-success' %>
    <%= link_to "Sign out", destroy_user_session_path, :class => 'btn btn-large btn-danger' %>
  <% else %> 
    <%= link_to "Login", new_user_session_path, :class => "btn btn-success" %>
    &nbsp;
    <%= link_to "Sign Up",new_user_registration_path, :class => "btn btn-success" %>
  <% end %>
</div>
